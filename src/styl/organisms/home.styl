body
  overflow-x hidden

#home
  height 100vh
  width 100vw
  position relative
  top 0
  left 0
  z-index 2
  outline none
  display flex
  .light-half
  .dark-half
    height 100vh
    width 50vw
  .dark-half
    background-color black
    position relative
    &:after
      content ""
      background url(/./assets/img/ergodox01.jpg)
      background-repeat no-repeat
      background-size cover
      background-position center
      opacity 0.3
      top 0
      left 0
      bottom 0
      right 0
      position absolute
      pointer-events none
    .bug-issues
      position absolute
      left 5px
      bottom 8px
      svg
        fill #999
        transform rotate(-45deg)
      &:hover
        svg
          fill $primaryColor
    .dark
      .wrapper
        text-align center
        height 100%
        display flex
        flex-direction column
        justify-content space-around
        .author
          width 100%
          padding-top 2vh
          font-weight 600
          font-size 1.5rem
          font-family 'Abel', sans-serif
          text-transform uppercase
          text-align center
          letter-spacing 2px
          color #999
        .subline
          font-family 'Unica One', sans-serif
          text-transform uppercase
          letter-spacing 2px
          color #999
  .light-half
    background-color white

+below($screen-sm)
  .subline
    padding 0 0.25rem
    margin-bottom 1.5rem

@media only screen and (orientation: portrait)
  #home
    flex-direction: column-reverse
    .light-half
    .dark-half
      height 50vh
      width 100vw
