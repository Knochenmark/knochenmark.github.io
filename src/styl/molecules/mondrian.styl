// https://percentagecalculator.net/

$mondrianRed = red
$mondrianBlue = darkblue
$mondrianYellow = yellow


#mondrian1
  position relative
  height 100%
  width 100%
  overflow hidden
  .rectangles
    .rec
      position absolute
      opacity 1
      transition 0.8s all ease-in
      transition-delay 0.4s
      &.red
        background-color $mondrianRed
      &.blue
        background-color $mondrianBlue
      &.yellow
        background-color $mondrianYellow
    .rec:nth-child(1)
      width 25.5%
      height 12%
    .rec:nth-child(2)
      right 0
      width 18%
      height 11.6%
    .rec:nth-child(3)
      top 12%
      left 16%
      width 9.5%
      height 20.5%
    .rec:nth-child(4)
      top 12%
      left 82%
      width 18.2%
      height 20.5%
    .rec:nth-child(5)
      top 33%
      left 16%
      width 10%
      height 8.5%
    .rec:nth-child(6)
      top 33%
      left 26%
      width 56%
      height 8.5%
    .rec:nth-child(7)
      top 42%
      left 0%
      width 15.75%
      height 9%
    .rec:nth-child(8)
      top 51%
      left 16%
      width 51%
      height 35.6%
    .rec:nth-child(9)
      top 87%
      left 0
      width 15.75%
      height 13%
    .rec:nth-child(10)
      top 87%
      left 67%
      width 17%
      height 13%
    .rec:nth-child(11)
      top 87%
      left 84%
      width 16.5%
      height 13%
  .horizontal
    .line
      position absolute
      background-color black
      height 0.5vh
      transition 1s all ease
    .line:nth-child(1)
      top 11.5%
      left 0
      width 100%
    .line:nth-child(2)
      top 32.5%
      left 0
      width 100%
    .line:nth-child(3)
      top 41.5%
      left 0
      width 100%
    .line:nth-child(4)
      top 51%
      left 0
      width 66.75%
    .line:nth-child(5)
      top 86.6%
      left 0
      width 100%
  .vertical
    .line
      position absolute
      background-color black
      width 0.5vh
      transition 1s all ease
    .line:nth-child(1)
      top 11.5%
      left 15.75%
      height 88.5%
      transition-delay 0.2s
    .line:nth-child(2)
      top 0%
      left 25.5%
      height 42%
    .line:nth-child(3)
      top 0%
      left 82%
      height 42%
    .line:nth-child(4)
      top 41.66%
      left 66.75%
      height 58.34%
    .line:nth-child(5)
      top 87%
      left 83.5%
      height 13%
  &.offscreen
    .rectangles
      .rec
        opacity 0
    .horizontal
      .line:nth-child(1)
        left -100%
      .line:nth-child(2)
        left 100%
      .line:nth-child(3)
        left -100%
      .line:nth-child(4)
        left -66.75%
      .line:nth-child(5)
        left -100%
    .vertical
      .line:nth-child(1)
        top 100%
      .line:nth-child(2)
        top -42%
      .line:nth-child(3)
        top -42%
      .line:nth-child(4)
        top 100%
      .line:nth-child(5)
        top 100%
